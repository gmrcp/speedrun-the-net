<div class="modal fade" id="confirmExitPlay" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <h3 class="text-center">Are you sure you want to leave this lobby?</h3>
      <div class="d-flex justify-content-around w-100 mt-2">
        <%= link_to 'No', 'javascript:void(0)', class: 'button small', data: { bs_toggle: "modal", bs_target: '#confirmExitPlay' } %>
        <%= button_to 'Yes', create_lobby_path, method: :get, class: 'button small filled', data: {remote: false} %>
      </div>
    </div>
  </div>
</div>
