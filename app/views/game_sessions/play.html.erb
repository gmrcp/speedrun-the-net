<div class="col-sm-12 col-md-3 mb-3">
  <div id="game-banner">
    <div>
      <div class="d-flex align-items-center mb-2">
        <img class="avatar-large me-2" src="<%= @img_start_url %>" alt="">
        <div>
          <p>START</p>
          <h3><%= @game_session.game.start_url.gsub(%r{_}, ' ') %></h3>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <img class="avatar-large me-2" src="<%= @img_end_url %>" alt="">
        <div>
          <p>GOAL</p>
          <h3><%= @game_session.game.end_url %></h3>
        </div>
      </div>
    </div>
    <div id="game-stats">
      <div>
        <p class="border-bottom border-secondary"><strong>CLICKS</strong></p>
        <p><%= @game_session.clicks.count %></p>
      </div>
      <div>
        <p class="border-bottom border-secondary"><strong>TIMER</strong></p>
        <span id="s_minutes">00</span> :
        <span id="s_seconds">00</span> :
        <span id="s_ms">000</span>
      </div>
    </div>
    <div id="player-list">
      <% @game_session.game.users.each do |player| %>
        <div class="d-flex align-items-center mb-1">
          <h5 class="flex-fill text-truncate"><%= player.username %></h5>
          <p><%= @game_session.clicks.count %></p>
          <i class="fas fa-hand-point-up"></i>
        </div>
      <% end  %>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to 'EXIT', lobby_path, class: 'button small empty' %>
    </div>
  </div>
</div>
<div class="col-sm-12 col-md-9 h-100" data-controller="play-page">
  <div id="game-page" data-play-page-target="article">
    <%= @html_game.html_safe %>
  </div>
</div>
<div class="d-none" id="start-time"><%= @game_session.started_at %></div>
