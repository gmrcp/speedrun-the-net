<div class="container-md align-self-center">
  <div class="row align-items-center justify-content-around">
    <div class='loginform-container col-4'>
      <div class="guest-container">
        <p>play anonymously
        as a guest
        </p>
        <%= form_for(:user, url: registration_path(resource_name)) do |f| %>
          <%= f.text_field :username,
                      required: true,
                      class: 'form-control p-2',
                      placeholder: 'username',
                      id: 'guest-username',
                      input_html: { autocomplete: "username" }%>
          <%= f.submit "ENTER", class:'btn-enter' %>
      <% end %>
      </div>
      <div class="spacer my-2">
        <hr>
        <p class='px-2'>or</p>
        <hr>
      </div>
      <div class="connect-account">
        <p>connect your
        account
        </p>
        <div class="icons">
          <%= link_to "#", method: :post do%>
          <div class="icon icon_twitch"><i class="fab fa-twitch"></i></div>
          <% end %>
          <%= button_to user_discord_omniauth_authorize_path, data: {turbo: false, local: true }, method: :post, class: 'icon icon_discord' do%>
          <div class="icon icon_discord"><i class="fab fa-discord"></i></div>
          <% end%>
          <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: {turbo: false, local: true }, class: "icon icon_google" do %>
            <div class="icon icon_google"><i class="fab fa-google"></i></div>
          <% end %>
        </div>
      </div>

      </form>
    </div>
    <div class="rules-instructions-container col-8">
      <%= render 'carousel' %>
    </div>
  </div>
</div>
